<table class = "table">
  <thead>
    <tr>
      <th scope="col"> 글번호</th>
      <th scope="col"> 글쓴이</th>
      <th scope="col"> 제목</th>
      <th scope="col"> 작성일자</th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= @post.id%> </td>
      <td> <%= @post.username%> </td>
      <td> <%= @post.title%> </td>
      <td> <%= @post.created_at %> </td>
      <td>

      </td>
    </tr>
  </tbody>
</table>
<hr />
<h3><%= @post.content%> <br /></h3>
<br />
<hr />
<% @post.comments.each_with_index do
   |comment i|%>
  <%= i %>
  <%= comment.content %>
<br />
<%end%>
<hr />

<h4>댓글 달기 </h4>
<form action="/user/add_comments">
  <input type="text" name="comments" placeholder="댓글을 입력하세요">
  <input type="hidden" name="id" value="<%= @post.id %>">
  <input type="submit" value="댓글 쓰기">
</form>

<hr />

<a href="/">홈으로 가기 </a>
